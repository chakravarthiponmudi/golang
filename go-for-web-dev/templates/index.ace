= doctype html
html
  head
    = css
      #search-results tr:hover {
        background-color: lightgrey;
        cursor: pointer;
      }
    
  body
    button onClick=showViewPage() View 
    button onClick=showSearchPage() Search
    div id="search-page" style="display:none"
      form id="search-form" onsubmit="return false"
        input name="search"
        input type="submit" value="Search" onclick="submitSearch()"

      table width="100%"
        thead
          tr style="text-align: left;"
            th width="40%" Tittle
            th width="30%" Author
            th width="10%" Year
            th width="20%" ID
        tbody id="search-results"
    div id="view-page"
      table width="100%"
        thead
          tr style="text-align: left;"
            th width="40%" Tittle
            th width="30%" Author
            th width="30%" Classification
          tbody id="view-result"
            {{range .Books}}
              tr  
                td {{.Title}}
                td {{.Author}}
                td {{.Classification}}
            {{end}}
    script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"
    = javascript
      function showViewPage() {
        $("#search-page").hide()
        $("#view-page").show()
      }
      function showSearchPage() {
        $("#search-page").show()
        $("#view-page").hide()
      }
      function submitSearch() {
        $.ajax({
          url: "/search",
          method: "POST",
          data : $("#search-form").serialize(),
          success: function(rawData) {
            var parsed = JSON.parse(rawData)
            if (!parsed) return;
            var searchResults = $("#search-results")
            searchResults.empty()
            parsed.forEach(result => {
              var row = $(`<tr><td> ${result.Title} </td><td>${result.Author}</td><td>${result.Year}</td><td>${result.ID}</td></tr>`)
              searchResults.append(row)
              row.on('click', function () {
                $.ajax({
                  url: "/books/add?id=" + result.ID,
                  method: "GET",
                  success: function(result) {
                    var book = JSON.parse(result)
                    if (!book) {
                      return
                    }
                    $("#view-result").append(`<tr><td> ${book.Title} </td><td>${book.Author}</td><td>${book.Classification}</td></tr>`)
                  }
                })
              });
            });
          }
        })
        return false
      }
